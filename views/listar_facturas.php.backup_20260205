                            <input type="date" name="fecha_desde" value="<?= $_GET['fecha_desde'] ?? '' ?>">
                        </div>
                        <div class="form-group mb-0">
                            <label>Hasta</label>
                            <input type="date" name="fecha_hasta" value="<?= $_GET['fecha_hasta'] ?? '' ?>">
